{
    "name": "niaz/car-workshop-system",
    "description": "A complete web application for managing car workshop appointments with MongoDB backend",
    "type": "project",
    "require": {
        "php": "^7.4|^8.0",
        "mongodb/mongodb": "^2.1"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.0"
    },
    "autoload": {
        "psr-4": {
            "CarWorkshop\\": "src/"
        }
    },
    "scripts": {
        "test": "phpunit"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    }
}
